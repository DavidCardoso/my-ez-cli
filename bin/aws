#!/bin/sh
set -e

IMAGE=amazon/aws-cli:latest
WORKDIR=/app

# run from your working directory
docker run -it --rm \
    --env AWS_PROFILE=$AWS_PROFILE \
    --env LANG="en_US.UTF-8" \
    --volume $HOME/.aws:/root/.aws \
    --volume $PWD:$WORKDIR \
    --workdir $WORKDIR \
    \
    $IMAGE "${@}" # --entrypoint /bin/bash \
